<Window x:Class="HranitelPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HranitelPro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Frame Grid.Row="1" x:Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" />
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#aaf683">
            <Image Source="\Resources\logo.png" Height="70" HorizontalAlignment="Left"/>
            <TextBlock Text="Хранитель PRO" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        </StackPanel>
        <Grid Grid.Row="2" Background="#ee6055"></Grid>
        <Button Width="70" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Content="Назад" Click="GoBackClick"  Panel.ZIndex="2" x:Name="BackButt"></Button>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
