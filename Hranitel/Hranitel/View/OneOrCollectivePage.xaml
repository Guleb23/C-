<Page x:Class="Hranitel.View.OneOrCollectivePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hranitel.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OneOrCollectivePage" Background="White">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Для одного" Margin="20" Width="200" Height="200" FontSize="20" Foreground="White" Click="ForOne"></Button>

            <Button Content="Коллективный" Margin="20" Width="200" Height="200" FontSize="20" Foreground="White"></Button>
        </StackPanel>
        
    </Grid>
</Page>
